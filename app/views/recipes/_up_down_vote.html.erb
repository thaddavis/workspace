<div class="pull-right">
  <%= link_to like_recipe_path(obj, like: true), method: :post do %>
    <i class="glyphicon glyphicon-thumbs-up"></i> <%= obj.thumbs_up_total %>
  <% end %> &nbsp;
  <%= link_to like_recipe_path(obj, like: false), method: :post do %>
    <i class="glyphicon glyphicon-thumbs-down"></i> <%= obj.thumbs_down_total %>
  <% end %>
</div>
